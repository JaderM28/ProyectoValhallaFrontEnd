@model ProyectoValhallaFrontEnd.Models.UsuarioDTO;


<h1 class="mb-3">Registrar Usuarios</h1>

<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card mx-auto">
                <h5 class="card-header bg-primary text-white">Registrar Usuarios</h5>
                <div class="card-body">

                    <form asp-action="Guardar" method="post" id="formulario" onsubmit="enviarFormulario(event)">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label asp-for="Nombres" class="control-label">Nombres</label>
                                <input asp-for="Nombres" class="form-control" required />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Apellidos" class="control-label">Apellidos</label>
                                <input asp-for="Apellidos" class="form-control" required/>
                                <span asp-validation-for="Apellidos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="CorreoElectronico" class="control-label">Correo Electronico</label>
                                <input asp-for="CorreoElectronico" class="form-control"  required/>
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-12">
                                <label asp-for="Telefono" class="control-label">Telefono</label>
                                <input asp-for="Telefono" class="form-control" required/>
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mt-5">
                            <button type="submit" class=" btn-primary">Crear</button>
                            <a asp-action="Index" class=" btn-secondary">Regresar</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
